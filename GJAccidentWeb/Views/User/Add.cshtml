@using GJAccidentWeb.Infrastructure
@{
    ViewBag.Title = "增加用户";
}
<span style="color:red">
    @Html.ValidationSummary(false)
</span>
<form action="/User/Add" method="post" id="dataForm" class="form-horizontal">
    <div class="form-group">
        <label for="userName" class="col-md-1 required">用户名</label>
        <div class="col-md-3">
            <input id="userName" class="form-control" name="userName" type="text" placeholder="非空格字符"/>
        </div>
    </div>
    <div class="form-group">
        <label for="phoneNum" class="col-md-1">手机号</label>
        <div class="col-md-3">
            <input id="phoneNum" class="form-control" name="phoneNum" type="text" />
        </div>
    </div>
    <div class="form-group">
        <label for="companyId" class="col-md-1">分公司</label>
        <div class="col-md-3">
            <select class="chosen-select form-control" id="companyId"  name="companyId">
                @foreach (var item in Html.companyInfo_All(ModelType.DefaultModel))
                {
                    <option value="@item.Value">@item.Key</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group">
        <label for="userNO" class="col-md-1">工号</label>
        <div class="col-md-3">
            <input id="userNO" class="form-control" name="userNO" type="text"/>
        </div>
    </div>
    <div class="form-group">
        <label for="password" class="col-md-1 required">密码</label>
        <div class="col-md-3">
            <input id="password" class="form-control" name="password" type="password" placeholder="请不要输入空格" />
        </div>
    </div>
    <div class="form-group">
        <label for="confirmPassword" class="col-md-1 required">确认密码</label>
        <div class="col-md-3">
            <input id="confirmPassword" name="confirmPassword" class="form-control" type="password" placeholder="请不要输入空格"/>
        </div>
    </div>
    <div class="col-md-1">
        <button class="btn btn-primary btn-block" type="submit" >提交</button>
    </div>
    
</form>

